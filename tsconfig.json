{
  "include": [ "./src/typescript" ],
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es2021",
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": "./src/typescript/",
    "paths": {
      "@/*": ["./*"],
      "@cluster/*": ["./cluster/*"],
      "@manager/*": ["./manager/*"]
    },
  },
}